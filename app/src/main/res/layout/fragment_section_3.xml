<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kevin.firstlineofcode.ui.home.MainActivity$PlaceholderFragment">

    <TextView android:id="@+id/section_txtl" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center"
        android:text="创建自定义控件（简单）"/>

    <TextView android:id="@+id/section_txt2" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:gravity="center"
    android:layout_below="@id/section_txtl"
    android:text="getResources().getDisplayMetrics().ydpi  得到屏幕密度值"/>

    <TextView android:id="@+id/section_txt3" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center"
        android:layout_below="@id/section_txt2"
        android:text="制作Nine-Patch图"/>

    <TextView android:id="@+id/section_txt4" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center"
        android:layout_below="@id/section_txt3"
        android:text="adapter.notifyDataSetChanged();当有新消息时，刷新ListView中的显示"/>
    <TextView android:id="@+id/section_txt5" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:gravity="center"
        android:layout_below="@id/section_txt4"
        android:text="listView.setSelection(listView.size());将listview定位到最后一行"/>

</RelativeLayout>
